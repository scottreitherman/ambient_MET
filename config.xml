<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Ambient Met</name>
    <description>
        An Apace Cordova application and interactive musical response piece to various rooms at the Metropolitan Museum of Art.
    </description>
    <author email="reitherman@nyu.edu" href="http://www.scottreitherman.com">
        Scott Reitherman
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />


    <!-- added the screen orientation plugin so i can lock portrait view -->
    <plugin name="cordova-plugin-screen-orientation"/>

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
